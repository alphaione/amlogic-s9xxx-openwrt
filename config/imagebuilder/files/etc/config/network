config device
        option name 'br-lan'
        option type 'bridge'
        list ports 'eth0'
        list ports 'dheth0'
        option promisc '1'
config interface 'lan'
        option device 'br-lan'
        option proto 'static'
        option netmask '255.255.255.0'
        option ip6assign '56'
        option ipaddr '192.168.5.100'
        option gateway '192.168.5.1'
        list dns '192.168.5.1'
